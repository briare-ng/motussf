{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex flex-column align-items-center text-center">

			<form method="post">

				{% if app.user %}
					<div class=" mb-3">
						Vous êtes connecté(e) en tant que
						{{ app.user.userIdentifier }}
						<a href="{{ path('app_logout') }}">Se déconnecter</a>
					</div>
				{% endif %}

				<h1 class="my-3">Veuillez vous connecter</h1>
				<label for="inputUsername" class="form-label">Votre pseudo</label>
				<input type="text" class="form-control form-control-sm mb-2" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
				<label for="inputPassword" class="form-label">Votre mot de passe</label>
				<input type="password" class="form-control form-control-sm mb-2" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="checkbox mb-3">
					<label class="form-check-label">
						<input type="checkbox" class="form-check-input" name="_remember_me">
						Se rappeler de moi
					</label>
				</div>

				<button class="btn btn-primary my-2" type="submit">
					Connexion
				</button>
			</form>
			{% if error %}
				<div class="alert alert-danger py-0 text-danger">
					<i class="bi bi-exclamation-triangle-fill me-2"></i>
					{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			<div>
				{# <p>
																									<a href="#">Mot de passe oublié</a>
																								</p> #}
				<p class="mt-3">Pas encore inscrit?
					<a href="{{path('app_register')}}">M'inscrire</a>
				</p>
			</div>
		</div>
	</div>
{% endblock %}
