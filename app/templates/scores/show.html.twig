{% extends 'base.html.twig' %}

{% block title %}
	{{titre}}
{% endblock %}

{% block body %}
	<div class="container text-center">
		<h1>{{titre}}</h1>
		<div class="row justify-content-center">
			<div class="col-md-6">
				<table class="table table-hover shadow-lg">
					<thead class="table-dark">
						<tr>
							<th>Points marqués</th>
							<th>Mot joué</th>
							<th>Date et heure</th>
						</tr>
					</thead>
					<tbody>
						{% for score in scores %}
							<tr>
								<td>{{ score.points }}</td>
								<td>{{ score.word.getWord() }}</td>
								<td>{{ score.dateTime ? score.dateTime|date('d/m/Y H:i') : '' }}</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="4">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

			</div>
		</div>
	</div>
{% endblock %}
